@model ProjetoIagro.ViewModel.PropriedadeViewModel

@{
    ViewData["Title"] = "Incluir";
}

<h1>Incluir</h1>

<h4>Propriedade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Incluir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Municipio" class="control-label">Município:</label>
                <select  class="form-control" id="Municipio" asp-for="Municipio" asp-items="@(new SelectList(Model.Municipios ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Produtor" class="control-label">Proprietário:</label>
                <select  class="form-control" id="Produtor" asp-for="Produtor" asp-items="@(new SelectList(Model.Produtores ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de propriedades</a>
</div>

