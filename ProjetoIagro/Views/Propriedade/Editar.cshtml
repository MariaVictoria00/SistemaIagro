@model ProjetoIagro.ViewModel.PropriedadeViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Propriedade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumeroInscricaoID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Município:</label>
                <select class="form-control" id="Municipio" asp-for="Municipio" asp-items="@(new SelectList(Model.Municipios ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Produtor:</label>
                <select class="form-control" id="Produtor" asp-for="Produtor" asp-items="@(new SelectList(Model.Produtores ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

