@model ProjetoIagro.ViewModel.VendaViewModel

@{
    ViewData["Title"] = "Incluir";
}

<h1>Incluir</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Incluir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PropriedadeOrigem" class="control-label"></label>
                <select class="form-control" id="PropriedadeOrigem" asp-for="PropriedadeOrigem" asp-items="@(new SelectList(Model.Propriedades ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PropriedadeDestino" class="control-label"></label>
                <select class="form-control" id="PropriedadeDestino" asp-for="PropriedadeDestino" asp-items="@(new SelectList(Model.Propriedades ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Especie" class="control-label"></label>
                <select class="form-control" id="Especie" asp-for="Especie" asp-items="@(new SelectList(Model.Especies ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FinalidadeVenda" class="control-label"></label>
                <select class="form-control" id="FinalidadeVenda" asp-for="FinalidadeVenda" asp-items="@(new SelectList(Model.FinalidadesVendas ,"Value", "Text"))">
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

